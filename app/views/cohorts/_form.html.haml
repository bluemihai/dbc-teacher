= simple_form_for(@cohort) do |f|
  = f.error_notification

  .form-inputs
    .large-3.columns= f.association :location, label_method: :city, autofocus: true
    .large-3.columns= f.input :name
    .large-3.columns= f.input :github_name
    .large-3.columns= f.input :phase_1_start
  .line-break

  .form-actions
    .large-3.columns= f.button :submit
  .line-break