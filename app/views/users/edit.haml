%h1 Editing User

= simple_form_for(@user) do |f|
  = f.error_notification

  .form-inputs
    .large-2.columns= f.association :cohort, collection: Cohort.active, label_method: :phase_cohort, autofocus: true
    .large-4.columns= f.input :name
    .large-2.columns= f.input :role, collection: User.roles_humanized
    .large-2.columns= f.input :github_login
    .line-break

  .form-actions
    = f.button :submit
